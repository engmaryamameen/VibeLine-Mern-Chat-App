{
  "extends": "../../packages/config/tsconfig/next.json",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "./*"
      ],
      "@vibeline/types": [
        "../../packages/types/src/index.ts"
      ],
      "@vibeline/utils": [
        "../../packages/utils/src/index.ts"
      ],
      "@vibeline/ui": [
        "../../packages/ui/src/index.ts"
      ]
    },
    "allowJs": true,
    "noEmit": true
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
