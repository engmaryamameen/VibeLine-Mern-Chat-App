NODE_ENV=development

# server
PORT=5001
API_PREFIX=/v1
JWT_SECRET=replace-with-long-random-secret
JWT_EXPIRES_IN=15m
REFRESH_TOKEN_EXPIRES_IN=7d
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/vibeline
CORS_ORIGIN=http://localhost:3000,http://localhost:3002
APP_URL=http://localhost:3002

# SMTP (required for email verification/password reset flows)
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=mailer@example.com
SMTP_PASS=replace-with-smtp-password
SMTP_SECURE=false
INVITE_FROM_EMAIL=mailer@example.com

# OAuth
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
GOOGLE_CALLBACK_URL=http://localhost:5001/v1/auth/google/callback
GITHUB_CLIENT_ID=
GITHUB_CLIENT_SECRET=
GITHUB_CALLBACK_URL=http://localhost:5001/v1/auth/github/callback

# web
# For dev with Next.js rewrites, leave this empty so requests go to /v1.
# For direct API access: use http://localhost:5001/v1
NEXT_PUBLIC_API_BASE_URL=
